{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path aliases */
    "paths": {
      "#assets/*": ["./src/assets/*"],
      "#constants": ["./src/constants.ts"],
      "#pkg-info": ["../../package.json"],
      "#store/*": ["./src/store/*"],
      "#types/*": ["./src/types/*"],
      "#ui/*": ["./src/ui/*"],
      "#utils": ["./src/utils.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../../tsconfig.json" }]
}
