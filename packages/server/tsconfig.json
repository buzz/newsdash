{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    /* Path aliases */
    "paths": {
      "#api/*": ["./src/api/*"],
      "#constants": ["./src/constants.ts"],
      "#redis": ["./src/redis/redis.ts"],
      "#schema": ["./src/schema.ts"]
    }
  },
  "include": ["src"]
}
