{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,

    /* Path aliases */
    "paths": {
      "#constants": ["./src/constants.ts"],
      "#redis/*": ["./src/redis/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../../tsconfig.json" }]
}
